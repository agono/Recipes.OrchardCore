{
  "name": "Homepage",
  "displayName": "Homepage",
  "description": "Creates a Page and Rich Html content type and adds a Homepage.",
  "author": "Antoine Griffard",
  "website": "http://antoinegriffard.com",
  "version": "2.0",
  "issetuprecipe": false,
  "categories": [ "default" ],
  "tags": [ "page" ],

  // The variables are evaluated the first time they are accessed, and reused across steps
  "variables": {
  },

  "steps": [
    {
      "name": "feature",
      "disable": [],
      "enable": [
        "OrchardCore.Contents",
        "OrchardCore.ContentTypes",
        "OrchardCore.HomeRoute"
      ]
    },
    {
      "name": "ContentDefinition",
      "ContentTypes": [
        {
          "Name": "Page",
          "DisplayName": "Page",
          "Settings": {
            "Creatable": "True",
            "Draftable": "True",
            "Listable": "True",
            "Securable": "True",
            "Stereotype": null
          },
          "ContentTypePartDefinitionRecords": [
            {
              "PartName": "Page",
              "Name": "Page",
              "Settings": {
                "Position": "3"
              }
            },
            {
              "PartName": "AutoroutePart",
              "Name": "AutoroutePart",
              "Settings": {
                "Position": "1",
                "ContentIndexSettings": {
                  "Included": false,
                  "Stored": false,
                  "Analyzed": false,
                  "Sanitized": false,
                  "Tokenized": false,
                  "Template": null
                },
                "Pattern": "{{ ContentItem | display_text | slugify }}",
                "AllowCustomPath": "True",
                "ShowHomepageOption": "True"
              }
            },
            {
              "PartName": "FlowPart",
              "Name": "FlowPart",
              "Settings": {
                "Position": "2"
              }
            },
            {
              "PartName": "TitlePart",
              "Name": "TitlePart",
              "Settings": {
                "Position": "0"
              }
            }
          ]
        },
        {
          "Name": "RichHtml",
          "DisplayName": "Rich Html",
          "Settings": {
            "Creatable": "False",
            "Draftable": "True",
            "Versionable": "False",
            "Listable": "False",
            "Securable": "True",
            "Stereotype": "Widget"
          },
          "ContentTypePartDefinitionRecords": [
            {
              "PartName": "RichHtml",
              "Name": "RichHtml",
              "Settings": {
                "Position": "0"
              }
            }
          ]
        }
      ],
      "ContentParts": [
        {
          "Name": "RichHtml",
          "Settings": {},
          "ContentPartFieldDefinitionRecords": [
            {
              "FieldName": "HtmlField",
              "Name": "Content",
              "Settings": {
                "DisplayName": "Content",
                "Editor": "Wysiwyg",
                "DisplayMode": null,
                "Hint": null,
                "ContentIndexSettings": {
                  "Included": false,
                  "Stored": false,
                  "Analyzed": false,
                  "Sanitized": false,
                  "Tokenized": false,
                  "Template": null
                },
                "Position": "0"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Content",
      "data": [
        {
          "ContentItemId": "[js: uuid()]",
          "ContentItemVersionId": "[js: uuid()]",
          "ContentType": "Page",
          "DisplayText": "Home",
          "Latest": true,
          "Published": true,
          "Owner": "admin",
          "Author": "admin",
          "Page": {},
          "AutoroutePart": {
            "Path": "home",
            "SetHomepage": true
          },
          "FlowPart": {
            "Widgets": [
              {
                "ContentItemId": "[js: uuid()]",
                "ContentItemVersionId": null,
                "ContentType": "RichHtml",
                "DisplayText": null,
                "Latest": false,
                "Published": false,
                "PublishedUtc": null,
                "CreatedUtc": null,
                "Owner": null,
                "Author": "admin",
                "RichHtml": {
                  "Content": {
                    "Html": "[file:text('Snippets/homepage.liquid')]"
                  }
                },
                "FlowMetadata": {
                  "Alignment": 3,
                  "Size": 100
                }
              }
            ]
          },
          "TitlePart": {
            "Title": "Home"
          }
        }
      ]
    }
  ]
}